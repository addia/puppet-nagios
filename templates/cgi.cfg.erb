#################################################################
#
# CGI.CFG - CGI Web Frontend Configuration File for Nagios
#
#################################################################


# MAIN CONFIGURATION FILE
main_config_file=<%= @config_dir %>/nagios.cfg


# PHYSICAL HTML PATH
physical_html_path=<%= @doc_root_dir %>


# URL HTML PATH
url_html_path=<%= @cgi_base_url %>


# CONTEXT-SENSITIVE HELP
show_context_help=0


# PENDING STATES OPTION
use_pending_states=1


# AUTHENTICATION USAGE
use_authentication=1


# x509 CERT AUTHENTICATION
use_ssl_authentication=0


# SYSTEM/PROCESS INFORMATION ACCESS
authorized_for_system_information=<%= @admin_user %>


# CONFIGURATION INFORMATION ACCESS
authorized_for_configuration_information=<%= @admin_user %>


# SYSTEM/PROCESS COMMAND ACCESS
authorized_for_system_commands=<%= @admin_user %>


# GLOBAL HOST/SERVICE VIEW ACCESS
authorized_for_all_services=<%= @admin_user %>,<%= @readonly_user %>
authorized_for_all_hosts=<%= @admin_user %>,<%= @readonly_user %>


# GLOBAL HOST/SERVICE COMMAND ACCESS
authorized_for_all_service_commands=<%= @admin_user %>
authorized_for_all_host_commands=<%= @admin_user %>


# READ-ONLY USERS
authorized_for_read_only=<%= @readonly_user %>


# DEFAULT STATUSWRL LAYOUT METHOD
default_statuswrl_layout=4


# PING SYNTAX
ping_syntax=/bin/ping -n -U -c 5 $HOSTADDRESS$


# REFRESH RATE
refresh_rate=60


# DEFAULT PAGE LIMIT
result_limit=0


# ESCAPE HTML TAGS
escape_html_tags=1


# SOUND OPTIONS
#host_unreachable_sound=hostdown.wav
#host_down_sound=hostdown.wav
#service_critical_sound=critical.wav
#service_warning_sound=warning.wav
#service_unknown_sound=warning.wav
#normal_sound=noproblem.wav


# URL TARGET FRAMES
action_url_target=_blank
notes_url_target=_blank


# LOCK AUTHOR NAMES OPTION
lock_author_names=1


# NAVIGATION BAR SEARCH OPTIONS
navbar_search_for_addresses=1
navbar_search_for_aliases=1

